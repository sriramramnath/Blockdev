.chatgptContainer {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 25%;
    background: #1A1A1A;
    display: flex;
    flex-direction: column;
    border-right: 2px solid #65272C;
    z-index: 1000;
    font-family: 'Trajan Pro', 'system-ui', sans-serif;
}

.header {
    padding: 1.5rem;
    font-size: 1.8rem;
    font-weight: 600;
    background: #252525;
    text-align: center;
    color: #E6D5BC;
    letter-spacing: 4px;
    border-bottom: 2px solid #65272C;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.messagesContainer {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    background: #1A1A1A;
    scrollbar-width: thin;
    scrollbar-color: #65272C #252525;
}

.messagesContainer::-webkit-scrollbar {
    width: 6px;
}

.messagesContainer::-webkit-scrollbar-track {
    background: #252525;
}

.messagesContainer::-webkit-scrollbar-thumb {
    background: #65272C;
    border-radius: 3px;
}

.message {
    margin-bottom: 1.5rem;
}

.assistant {
    background: #252525;
    padding: 1.5rem;
    border-radius: 4px;
    max-width: 90%;
    margin-left: auto;
    margin-right: auto;
    border-left: 2px solid #65272C;
    color: #E6D5BC;
    font-size: 0.95rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    font-family: 'system-ui', sans-serif;
    line-height: 1.6;
}

.inputArea {
    padding: 1.5rem;
    border-top: 2px solid #65272C;
    display: flex;
    gap: 0.8rem;
    background: #252525;
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
}

.input {
    flex: 1;
    padding: 0.8rem 1rem;
    border: 1px solid #65272C;
    border-radius: 4px;
    font-size: 0.95rem;
    background: #1A1A1A;
    color: #E6D5BC;
    font-family: 'system-ui', sans-serif;
}

.input::placeholder {
    color: rgba(230, 213, 188, 0.5);
}

.sendButton {
    padding: 0.8rem 1.5rem;
    background: #65272C;
    color: #E6D5BC;
    border: none;
    border-radius: 4px;
    cursor: not-allowed;
    opacity: 0.9;
    font-family: 'Trajan Pro', 'system-ui', sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 500;
    transition: all 0.2s ease;
}

.input:disabled {
    background: #1A1A1A;
    cursor: not-allowed;
    opacity: 0.7;
}
